
@{
    ViewBag.Title = "Index";
}

<title> Lista de Cidades </title>
<h3 class="text-center mb-3 mt-3 text-info">Lista de Cidades</h3>

<div class="row">
    <div class="col-12">
        <a href="/cidade/cadastro" class="btn btn-primary float-right mb-3">
            <i class="fas fa-plus"> Nova Cidade</i>
        </a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>

            <th>Código</th>
            <th>Nome</th>
            <th>Estado</th>
            <th>Numero Habitantes</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Estado</th>
            <th>Numero Habitantes</th>
            <th>Ação</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (Model.Cidade cidade in ViewBag.Cidades)
        {
            <tr>
                <td>@cidade.Id</td>
                <td>@cidade.Nome</td>
                <td>@cidade.Estado.Nome</td>
                <td>@cidade.NumeroHabitantes</td>
                <td>
                    <a href="/cidade/editar?id=@cidade.Id" class="btn btn-primary"><i class="fas fa-pen"></i> Editar</a>
                    <a href="/cidade/apagar?id=@cidade.Id" class="btn btn-danger"><i class="fas fa-trash"></i> Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>


