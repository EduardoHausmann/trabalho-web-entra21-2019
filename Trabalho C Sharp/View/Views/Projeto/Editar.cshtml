
@{
    ViewBag.Title = "Editar";
}

<title>Editar Projeto</title>
<h3 class="text-center mb-3 mt-3 text-info">Edição de Projetos</h3>

<form action="/projeto/update" method="post">
    <input type="hidden" name="id" value="@ViewBag.Projeto.Id" />

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-cliente">Cliente</label>
                <select class="form-control" name="usuario">
                    <option disabled="disabled" selected="selected">Selecione um Cliente</option>
                    @foreach (Model.Cliente cliente in ViewBag.Categorias)
                    {
                        if (cliente.Id == ViewBag.Projeto.IdCliente)
                        {
                            <option value="@cliente.Id" selected="selected">@cliente.Nome</option>
                        }
                        else
                        {
                            <option value="@cliente.Id">@cliente.Nome</option>
                        }
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome">Nome</label>
                <input type="text" name="nome" id="campo-nome" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-dataCriacao">Data de Criação</label>
                <input type="datetime" name="dataCrição" id="campo-dataCriacao" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-dataFinalizacao">Data de Finaliza</label>
                <input type="datetime" name="dataFinalizacao" id="campo-dataFinalizacao" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-success float-right"><i class="fas fa-save"></i>Salvar</button>
        </div>
    </div>
</form>

