
@{
    ViewBag.Title = "Index";
}

<title>Lista de Projetos</title>
<h3 class="text-center mb-3 mt-3 text-info">Lista de Projetos</h3>

<div class="row mb-3">
    <div class="col-12">
        <a href="/projeto/cadastro" class="btn btn-primary float-right">
            <i class="fas fa-plus"></i>Novo Projeto
        </a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Cliente</th>
            <th>Nome</th>
            <th>Data Criação</th>
            <th>Data Finalização</th>
        </tr>
    </thead>

    <tbody>
        @foreach(Model.Projeto projeto in ViewBag.Projetos)
        {
            <tr>
                <td>@projeto.Id</td>
                <td>@projeto.Cliente.Nome</td>
                <td>@projeto.Nome</td>
                <td>@projeto.DataCriacao</td>
                <td>@projeto.DataFinalizacao</td>
            </tr>
        }
    </tbody>
</table>

