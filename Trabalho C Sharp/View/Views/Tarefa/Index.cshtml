
@{
    ViewBag.Title = "Index";
}

<title> Lista Tarefas </title>
<h3 class="text-center mb-3 mt-3 text-info">Lista de Tarefas</h3>

<div class="row mb-3">
    <div class="col-12">
        <a href="/tarefa/cadastro" class="btn btn-primary float-right">
            <i class="fas fa-plus"></i> Nova Tarefa
        </a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Usuário</th>
            <th>Projeto</th>
            <th>Categoria</th>
            <th>Título</th>
            <th>Descrição</th>
            <th>Duração</th>
            <th>Ação</th>
        </tr>
    </thead>

    <tbody>
        @foreach(Model.Tarefa tarefa in ViewBag.Tarefas)
        {
            <tr>
                <td>@tarefa.Id</td>
                <td>@tarefa.Usuario.Nome</td>
                <td>@tarefa.Projeto.Nome</td>
                <td>@tarefa.Categoria.Nome</td>
                <td>@tarefa.Titulo</td>
                <td>@tarefa.Descricao</td>
                <td>@tarefa.Duracao</td>
                <td>
                    <a href="/tarefa/editar?id=@tarefa.Id" class="btn btn-primary">
                        <i class="fas fa-pen"></i> Editar
                    </a>
                    <a href="/tarefa/apagar?id=@tarefa.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>