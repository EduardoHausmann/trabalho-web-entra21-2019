
@{
    ViewBag.Title = "Index";
}

<title>Lista de Clientes</title>
<h3 class="text-center mb-3 mt-3 text-info">Lista de Clientes</h3>

<div class="row mb-3">
    <div class="col-12">
        <a href="/cliente/cadastro" class="btn btn-primary float-right">
            <i class="fas fa-plus"></i> Novo Cliente
        </a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Cpf</th>
            <th>Data de Nascimento</th>
            <th>Numero</th>
            <th>Complemento</th>
            <th>Logradouro</th>
            <th>Cep</th>
            <th>Cidade</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Model.Cliente cliente in ViewBag.Clientes)
        {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Nome</td>
                <td>@cliente.Cpf</td>
                <td>@cliente.Data_Nascimento</td>
                <td>@cliente.Numero</td>
                <td>@cliente.Complemento</td>
                <td>@cliente.Logradouro</td>
                <td>@cliente.Cep</td>
                <td>@cliente.Cidade.Nome</td>
                <td>
                    <a href="/cliente/editar?id=@cliente.Id" class="btn btn-primary">
                        <i class="fas fa-pen"></i> Editar
                    </a>
                    <a href="/cliente/apagar?id=@cliente.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Cpf</th>
            <th>Data de Nascimento</th>
            <th>Numero</th>
            <th>Complemento</th>
            <th>Logradouro</th>
            <th>Cep</th>
            <th>Cidade</th>
        </tr>
    </tfoot>
</table>

