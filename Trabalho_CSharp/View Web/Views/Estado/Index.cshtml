
@{
    ViewBag.Title = "Index";
}

<title>Lista Estado</title>
<h2 class="text-center mt-3 mb-3 fw-bolder">Lista de Estados</h2>

<div class="row mb-3">
    <div class="col-12">
        <a href="/estado/cadastro" class="btn btn-outline-info mt-3 mb-3"><i class="bi bi-plus-square"></i> Novo Estado</a>
    </div>
</div>

<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>Código</th>
            <th>Estado</th>
            <th>Sigla</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Model.Estado estado in ViewBag.Estados)
        {
            <tr>
                <td>@estado.Id</td>
                <td>@estado.Nome</td>
                <td>@estado.Sigla</td>
                <td>
                    <a href="/estado/editar?id=@estado.Id" class="btn btn-outline-primary"><i class="bi bi-pencil"></i> Editar</a>
                    <a href="/estado/apagar?id=@estado.Id" class="btn btn-outline-danger"><i class="bi bi-trash"></i> Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>