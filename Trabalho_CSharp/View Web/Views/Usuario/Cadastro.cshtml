
@{
    ViewBag.Title = "Cadastro";
}

<title>Cadastrar Usuario</title>
<h2 class="text-center mt-3 mb-3 fw-bolder">Cadastro de Usuário</h2>

<form action="/usuario/store" method="post">
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome">Nome</label>
                <input type="text" name="nome" id="campo-nome" class="form-control"/>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="campo-login">Login</label>
                <input type="text" name="login" id="campo-login" class="form-control" />
            </div>
        </div>

        <div class="col-6">
            <div class="form-group">
                <label for="campo-senha">Senha</label>
                <input type="password" name="senha" id="campo-senha" class="form-control" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button class="btn btn-outline-success mb-3 mt-3" type="submit"><i class="bi bi-save"></i> Salvar</button>
        </div>
    </div>
</form>