
@{
    ViewBag.Title = "Index";
}

<title>Lista Usuario</title>
<h2 class="text-center mt-3 mb-3 fw-bolder">Lista de Usuários</h2>

<div class="row mb-3">
    <div class="col-12">
        <a href="/usuario/cadastro" class="btn btn-outline-info mb-3 mt-3"><i class="bi bi-plus-square"></i> Novo Usuário</a>
    </div>
</div>

<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Login</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Model.Usuario usuario in ViewBag.Usuarios)
        {
            <tr>
                <td>@usuario.Id</td>
                <td>@usuario.Nome</td>
                <td>@usuario.Login</td>
                <td>
                    <a href="/usuario/editar?id=@usuario.Id" class="btn btn-outline-primary"><i class="bi bi-pencil"></i> Editar</a>
                    <a href="/usuario/apagar?id=@usuario.Id" class="btn btn-outline-danger"><i class="bi bi-trash"></i> Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>